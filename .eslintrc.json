{
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "rules": {
      "semi": [ "error", "always" ],
      "quotes": [ "error", "single" ],
      "comma-dangle": [ "error", "always-multiline" ],
      "comma-spacing": "error",
      "comma-style": "error",
      "arrow-spacing": [
        "warn",
        {
          "before": true,
          "after": true
        }
      ]
    }
  }
  